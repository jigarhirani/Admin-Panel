@using System.Data;
@{
    ViewData["Title"] = "City Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="row">
        <div class="col-md-12 bg-light text-end mb-3">
            <a asp-action="CityAddEdit" asp-area="LOC_City" asp-controller="LOC_City"><button type="button" class="btn btn-success align-right"><i class="bi bi-plus-lg"></i> Add City</button></a>
        </div>
    </div>
    <div class="col-lg-12">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">City List</h5>

                <!-- Table with stripped rows -->
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">City Name</th>
                            <th scope="col">City Code</th>
                            <th scope="col">State Name</th>
                            <th scope="col">Country Name</th>
                            <th scope="col">Created</th>
                            <th scope="col">Modified</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            if (Model.Rows.Count > 0)
                            {
                                foreach (DataRow row in Model.Rows)
                                {
                                    <tr>
                                        <td>@row["CityName"]</td>
                                        <td>@row["CityCode"]</td>
                                        <td>@row["CountryName"]</td>
                                        <td>@row["CreationDate"]</td>
                                        <td>@row["CreationDate"]</td>
                                        <td>@row["Modified"]</td>
                                        <td>
                                            <div class="d-flex ">
                                                <form method="post" asp-controller="LOC_City" asp-action="CityAddEdit">
                                                    <input type="hidden" name="CityID" value="@row["CityID"]">
                                                    <button type="submit" class="btn btn-warning me-2"><i class="bi bi-pencil-square"></i></button>
                                                </form>
                                                <form method="post" asp-controller="LOC_City" asp-action="DeleteCity">
                                                    <input type="hidden" name="CityID" value="@row["CityID"]">
                                                    <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i></button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center">
                                        <p class="col-form-label">No Record Found</p>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

